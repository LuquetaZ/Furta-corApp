<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey4"
    tools:context=".PSmsg1Act">

    <ImageView
        android:id="@+id/imageView118"
        android:layout_width="413dp"
        android:layout_height="181dp"
        android:background="@drawable/pastaseguraheader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView116"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textpstitle1"
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/libre_franklin_bold"
        android:textColor="#fff"
        android:textSize="33sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/btnvoltarpastasegura"
        app:layout_constraintTop_toTopOf="@+id/imageView118" />

    <ImageView
        android:id="@+id/imageView116"
        android:layout_width="415dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/barrasuperior" />

    <TextView
        android:id="@+id/textpstitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/libre_franklin_bold"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textpstitle3"
        app:layout_constraintStart_toEndOf="@+id/btnvoltarpastasegura"
        app:layout_constraintTop_toBottomOf="@+id/textpstitle1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textpstitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/libre_franklin_bold"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView118"
        app:layout_constraintStart_toEndOf="@+id/btnvoltarpastasegura" />

    <ImageButton
        android:id="@+id/btnvoltarpastasegura"
        android:layout_width="25dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:background="@drawable/btnvoltaremail"
        app:layout_constraintBottom_toBottomOf="@+id/textpstitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textpstitle1" />

    <ImageView
        android:id="@+id/imgiconpastasegura"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/textpstitle3"
        app:layout_constraintStart_toStartOf="@+id/imageView118"
        app:layout_constraintTop_toTopOf="@+id/textpstitle2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="635dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView118"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textpsmsg"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="65dp"
                android:fontFamily="@font/libre_franklin_semibold"
                android:justificationMode="inter_word"
                android:textColor="@color/white2"
                android:textSize="25sp"
                app:layout_constraintVertical_bias="1.0" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView117"
        android:layout_width="412dp"
        android:layout_height="98dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/barrainferior"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btnmenuPS"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/btnmenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>

